{
    "name": "TpUpgrade",
    "manifest_version": 2,
    "description": "Removes advertisements of chatroom websites made by Tarh-Pardaaz",
    "version": "0.1.0",
    "browser_action": {
        "default_icon": "icons/icon128.png",
        "default_title": "TpUpgrade",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "dist/storage.js",
            "dist/handlers.js",
            "dist/init.js"
        ],
        "persistent": true
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "webNavigation",
        "<all_urls>"
    ]
}